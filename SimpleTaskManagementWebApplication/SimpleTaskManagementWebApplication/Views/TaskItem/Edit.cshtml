@model TaskItem
@{
    ViewData["Title"] = "Edit";
    string errorMessage = ViewBag.message ?? "";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h1>Edit Task</h1>
        <p class="text-danger">@errorMessage</p>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueDate"></label>
                <input type="datetime-local" asp-for="DueDate" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" asp-for="IsCompleted" />
                <label class="form-check-label" asp-for="IsCompleted">Completed</label>
            </div>
            <div class="row mt-2">
                <div class="col-6">
                    <button type="submit" class="btn btn-success w-100">Update</button>
                </div>
                <div class="col-6">
                    <a asp-controller="TaskItem" asp-action="Index" class="btn btn-warning w-100">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
